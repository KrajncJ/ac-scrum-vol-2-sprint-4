extends layout

block content

    main.container(role="main")
        .container.theme-showcase
            .page-header
                h3 Upload document

                .container
                    nav.navbar.navbar-expand-lg.navbar-light.bg-light
                        ul.navbar-nav.mr-auto
                            li.nav-item
                                a.nav-link(href='/projects/'+ project.id + '/documentation')
                                    |  Back
                hr
            div.main.container
                .row
                    if errorMessages !== 0
                        .col-md-12.col-md-offset-0.margin-top20
                            .alert.alert-danger(role="alert")
                                h4.alert-heading #{errorMessages}
                                p Something went wrong. Please check if your form is correct or if this project name already exists - otherwise try later or contact application administrator.

                    if success !== 0
                        .col-md-12.col-md-offset-0.margin-top20
                            .alert.alert-success(role="alert")
                                h4.alert-heading Success.
                                p #{success}.

                    div.col-md-9.col-md-offset-0.margin-center.margin-top20
                        div.panel-body
                            div
                                form.well.form-horizontal(method='POST' enctype="multipart/form-data" action=('/projects/'+ project.id + '/documentation/upload/'))#document_form
                                    div.panel-body
                                        div.col-md-12.col-md-offset-0
                                            div.form-group
                                                input#file.form-control(input type="file",name="filetoupload")
                                                
                                            button.btn.btn-primary.center-block.margin-top20#registerBtn(type='submit') Upload



    script.
        